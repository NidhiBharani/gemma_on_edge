{
  "manifest_version": 3,
  "name": "Gemma WebGPU MVP",
  "version": "0.1.0",
  "description": "Run Gemma 3n WebGPU inference offscreen with MediaPipe.",
  "permissions": ["offscreen", "scripting"],
  "host_permissions": [
    "http://localhost:8000/*",
    "https://chatgpt.com/*",
    "https://chat.openai.com/*"
  ],
  "action": {
    "default_title": "Gemma",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "service_worker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://chatgpt.com/*", "https://chat.openai.com/*"],
      "js": ["content_script.js"],
      "run_at": "document_idle"
    }
  ],
  "content_security_policy": {
    "extension_pages": "default-src 'self'; script-src 'self' 'wasm-unsafe-eval'; object-src 'self'; connect-src 'self' http://localhost:8000;"
  }
}
